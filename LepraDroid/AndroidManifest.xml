<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hexonxons.lepradroid"
    android:versionCode="4"
    android:versionName="0.0.4" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    
    <application
        android:name="com.hexonxons.lepradroid.system.LepraApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Lepradroid" >
        
        <activity
            android:name="com.hexonxons.lepradroid.MainActivity"
            android:theme="@style/Theme.Lepradroid">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <service android:name="com.hexonxons.lepradroid.system.NetService" android:enabled="true"></service>
        
    </application>

</manifest>
